<div class="row">
    <h1>Donations</h1>
    <table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Charity Name</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each donations as |donation|}}
        <tr>
            <td>${{donation.amount}}</td>
            <td><a href="/charity/{{donation.charity._id}}">{{donation.charity.name}}</a></td>
            <td>{{donation.createdAt}}</td>
            <td>
                <a class="btn btn-primary" href="/donations/edit/{{donation._id}}" role="button">Update</a>
                <form action="/donations/{{donation._id}}/delete" method="post">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
    </table>
</div>